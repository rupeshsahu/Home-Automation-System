        android:layout_alignStart="@+id/toggleButton8"
        android:layout_marginTop="17dp" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="37dp"
        android:id="@+id/toggleButton8"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/toggleButton7"
        android:layout_alignParentEnd="true" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/toggleButton6"
        android:layout_below="@+id/toggleButton5"
        android:layout_alignStart="@+id/toggleButton7" />

    <TextView
        android:text="LIGHT 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
